<apex:page controller="AccountListSearchController">
    <apex:form >
    	<apex:pageBlock title="Accounts Search" id="account_list">
            
            <apex:pageBlockButtons location="top">
            	<apex:commandButton value="Search" action="{! filteredSearch}"/>
         	</apex:pageBlockButtons>
            
            <apex:pageBlockSection columns="1">
                <apex:inputText value="{!PageSize}" label="No. of Accounts to show"/>
            	<apex:inputField value="{!acc.BillingCity}"/>
            	<apex:inputField value="{!acc.BillingState}"/>
            	<apex:inputField value="{!acc.BillingCountry}"/>
        	</apex:pageBlockSection>
            
        	<!-- Accounts List -->
        	<apex:pageBlockTable value="{! accounts }" var="act">
            	<apex:column value="{! act.Name }"/>
            	<apex:column value="{! act.billingCity }"/>
            	<apex:column value="{! act.billingState }"/>
            	<apex:column value="{! act.billingCountry }"/>
        	</apex:pageBlockTable>
            
            <!-- Pagination-->
        	Page: <apex:outputText value=" {!PageNumber} of {! CEILING(ResultSize / PageSize) }"/><br/>
        	<!--First page-->
            <!-- active-->
        	<apex:commandLink action="{! First }" value="first" reRender="account_list" rendered="{! HasPrevious }"/>
            <!-- inactive (first page) -->
            <apex:outputText style="color: #ccc;" value="first" rendered="{! NOT(HasPrevious) }"/>
            &nbsp;|&nbsp;
        	<!-- Previous page -->
			<!-- active-->
			<apex:commandLink action="{! Previous }" value="« Previous" reRender="account_list" rendered="{! HasPrevious }"/>
			<!-- inactive (no earlier pages) -->
			<apex:outputText style="color: #ccc;" value="« Previous" rendered="{! NOT(HasPrevious) }"/>
			&nbsp;&nbsp;
			<!-- Next page -->
			<!-- active-->
			<apex:commandLink action="{! Next }" value="Next »" reRender="account_list" rendered="{! HasNext }"/>
			<!-- inactive (no more pages)-->
			<apex:outputText style="color: #ccc;" value="Next »" rendered="{! NOT(HasNext) }"/>
            &nbsp;|&nbsp;
            <!--Last page-->
            <!-- active-->
        	<apex:commandLink action="{! Last }" value="last" reRender="account_list" rendered="{! HasNext }"/>
            <!-- inactive (last page) -->
            <apex:outputText style="color: #ccc;" value="last" rendered="{! NOT(HasNext) }"/>
    	</apex:pageBlock>      
	</apex:form>
</apex:page>